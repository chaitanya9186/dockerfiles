[Unit]
Description=Announce orientdb-%p-%m-%i
Requires=docker.service
After=docker.service

[Service]
EnvironmentFile=/etc/environment
ExecStart=/bin/sh -c "while true; do etcdctl set /cleawing/services/orientdb/%i/cluster `docker port orientdb-%p-%m-%i 2434` --ttl 60; sleep 45; done"
ExecStop=/usr/bin/etcdctl rm --recursive /cleawing/services/orientdb/%i

[X-Fleet]
X-ConditionMachineOf=orientdb-node@%i.orientdb