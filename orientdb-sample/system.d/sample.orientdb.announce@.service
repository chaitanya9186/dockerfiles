[Unit]
Description=%p.%m.%i
Requires=docker.service
After=docker.service

[Service]
EnvironmentFile=/etc/environment
ExecStart=/bin/sh -c "while true; do etcdctl set /cleawing/services/orientdb/%m.$(echo '%p' | sed 's@.announce@@').%i/cluster `docker port %m.$(echo '%p' | sed 's@.announce@@').%i 2434` --ttl 60; sleep 45; done"
ExecStop=/usr/bin/etcdctl rm --recursive /cleawing/services/orientdb/%m.$(echo '%p' | sed 's@.announce@@').%i

[X-Fleet]
X-ConditionMachineOf=sample.orientdb@%i.service